<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <filter>
        <filter-name>MVCFilter</filter-name>
        <filter-class>lv.javaguru.java2.servlets.mvc.MVCFilter</filter-class>
    </filter>

    <servlet>
        <servlet-name>ErrorHandlerServlet</servlet-name>
        <servlet-class>lv.javaguru.java2.servlets.ErrorHandlerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ErrorHandlerServlet</servlet-name>
        <url-pattern>/ErrorHandler</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>lv.javaguru.java2.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>TodoGroupServlet</servlet-name>
        <servlet-class>lv.javaguru.java2.servlets.TodoGroupServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>TodoItemServlet</servlet-name>
        <servlet-class>lv.javaguru.java2.servlets.TodoItemServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>FileServlet</servlet-name>
        <servlet-class>lv.javaguru.java2.servlets.FileServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TodoGroupServlet</servlet-name>
        <url-pattern>/todoGroup</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TodoItemServlet</servlet-name>
        <url-pattern>/todoItem</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>FileServlet</servlet-name>
        <url-pattern>/file</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <filter-mapping>
        <filter-name>MVCFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Page not found and other standard server error-codes -->
    <error-page>
        <error-code>404</error-code>
        <location>/ErrorHandler</location>
    </error-page>

    <!-- unhandled error catcher -->
    <error-page>
        <exception-type>java.lang.Throwable</exception-type >
        <location>/ErrorHandler</location>
    </error-page>

</web-app>